<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.TextFieldTableCell?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="260.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true">
         <content>
            <TableView fx:id="configTable" editable="true" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn onEditCommit="#changeShortcutName" prefWidth="75.0" sortable="false" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn" />
                    </cellFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" sortable="false" text="Command" onEditCommit="#changeShortcutCommand" >
                  <cellValueFactory>
                      <PropertyValueFactory property="command" />
                  </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn" />
                    </cellFactory>
                </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </content>
      </ScrollPane>
       <HBox alignment="CENTER_LEFT" spacing="10">
           <TextField fx:id="nameField" maxWidth="Infinity" prefWidth="90" promptText="Shortcut Name" HBox.hgrow="ALWAYS" />
           <TextField fx:id="commandField" maxWidth="Infinity" prefWidth="90" promptText="Command" HBox.hgrow="ALWAYS" />
           <Button onAction="#addShortcut" text="Add" />
       </HBox>
      <Button onAction="#saveConfig" text="Save" underline="true" />
   </children>
   <opaqueInsets>
      <Insets top="10.0" />
   </opaqueInsets>
</VBox>
